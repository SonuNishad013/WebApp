# Environment Configuration
NODE_ENV=development
PORT=5000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./temp/uploads
OUTPUT_DIR=./temp/outputs

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# Security Settings
FILE_TTL=3600
ALLOWED_EXTENSIONS=.pdf,.docx,.pptx,.xlsx,.txt,.jpg,.jpeg,.png

# Conversion Tool Paths (macOS defaults)
QPDF_PATH=/opt/homebrew/bin/qpdf
GHOSTSCRIPT_PATH=/opt/homebrew/bin/gs
LIBREOFFICE_PATH=/Applications/LibreOffice.app/Contents/MacOS/soffice
POPPLER_PATH=/opt/homebrew/bin/pdftoppm
IMAGEMAGICK_PATH=/opt/homebrew/bin/magick
TESSERACT_PATH=/opt/homebrew/bin/tesseract
